  %body
    #section0.navbar-wrapper
      .container
        .row
          .col-lg-2.col-md-2.col-sm-12.col-xs-12
            %a.logo{:href => "index.html"}
              %img{:alt => "img", :src => "/assets/img/Logo.png"}/
          .col-lg-3.col-md-3.col-sm-12.col-xs-12
            %ul.list-unstyled.list-inline.socials
              %li
                %a{:href => "#"}
                  %i.app-icons-twitter.app-icons-large
              %li
                %a{:href => "#"}
                  %i.app-icons-facebook.app-icons-large
              %li
                %a{:href => "#"}
                  %i.app-icons-google-plus.app-icons-large
              %li
                %a{:href => "#"}
                  %i.app-icons-dribbble.app-icons-large
              %li
                %a{:href => "#"}
                  %i.app-icons-youtube.app-icons-large
          .col-lg-7.col-md-7.col-sm-12.col-xs-12
            %a.menu-link{:href => "#menu"} Menu
            %nav#menu.menu{:role => "navigation"}
              %ul.sf-menu
                %li.has-subnav.first-list-item{class: "#{'active' if params[:controller] == 'pages' and params[:action] == 'index'}"}
                  = link_to 'Home', root_path, class: 'first-link'
                %li.first-list-item{class: "#{'active' if params[:controller] == 'pages' and params[:action] == '1index'}"}
                  = link_to 'About', '#', class: 'first-link'
                %li.first-list-item{class: "#{'active' if params[:controller] == 'pages' and params[:action] == '1index'}"}
                  = link_to 'Features', '#', class: 'first-link'
                %li.first-list-item{class: "#{'active' if params[:controller] == 'pages' and params[:action] == '1index'}"}
                  = link_to 'Portfolio', '#', class: 'first-link'
                %li.first-list-item{class: "#{'active' if params[:controller] == 'pages' and params[:action] == '1index'}"}
                  = link_to 'Blog', '#', class: 'first-link'
                %li.first-list-item{class: "#{'active' if params[:controller] == 'pages' and params[:action] == '1index'}"}
                  = link_to 'Contact', '#', class: 'first-link'
    = yield
    %footer
      .footer-rights-container
        .container
          .row
            .col-lg-4.col-md-4.col-col-sm-6.col-xs-12
              %a.footer-logo{:href => "#"}
                %img{:alt => "footerlogo", :src => "/assets/img/footerLogo.png"}/
            .col-lg-8.col-md-8.col-col-sm-6.col-xs-12
              %p.copy-rights.pull-right
